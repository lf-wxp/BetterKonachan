{
    "compilerOptions": {
        "baseUrl": "./",
        "target": "es2015",
        "sourceMap": true,
        "esModuleInterop": true,
        "noEmitHelpers": true,
        "importHelpers": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "allowUnreachableCode": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "removeComments": true,
        "noUnusedLocals": true,
        "noImplicitReturns": false,
        "jsx": "react",
        "lib": [ "dom", "es7", "es6", "es2015" ],
        "typeRoots": [ "node_modules/@types" ],
        "outDir": "./dist",
        "types": [ "node" ],
        "paths": {
            "~util": [ "util/index" ],
            "~module/*": [ "module/*" ],
            "~model/*": [ "model/*" ],
            "~config": [ "config/index" ],
            "~component/*": [ "assets/src/component/*" ],
            "~service": [ "assets/src/service" ],
            "~cModule/*": [ "assets/src/module/*" ],
            "~cModel/*": [ "assets/src/model/*" ],
            "~css/*": [ "assets/src/css" ],
            "~src/*": [ "assets/src/*" ],
            "~image/*": [ "assets/src/image/*" ],
            "~hook/*": [ "assets/src/hook/*" ],
            "~controller/*": [ "controller/*" ],
            "~route/*": [ "route/*" ],
        }
    },
    "exclude": ["node_modules", "**/*.test.ts",]
}
